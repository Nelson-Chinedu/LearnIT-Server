{
  "name": "learnit-server",
  "version": "1.0.0",
  "description": "API Server for LearnIT-client",
  "main": "index.js",
  "repository": "https://github.com/Nelson-Chinedu/LearnIT-Server",
  "author": "Nelson Chinedu <egwuchinedu69@gmail.com>",
  "license": "MIT",
  "nyc": {
    "exclude": [
      "src/migrations",
      "src/db",
      "src/__test__",
      "src/config",
      "src/routes/index.js",
      "src/app.js"
    ]
  },
  "scripts": {
    "test": "NODE_ENV=test npm run build && nyc mocha -r dotenv/config --require @babel/register \"./build/tests/**/*.js\" --timeout 0 --exit || true",
    "pretest-travis": "NODE_ENV=test npm run migrate:undo && NODE_ENV=test npm run migrate",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "start": "cross-env NODE_ENV=production node build/server.js",
    "dev": "cross-env NODE_ENV=development nodemon",
    "test-env": "cross-env NODE_ENV=test npm run build && node build/server.js",
    "tslint": "tslint -c tslint.json 'src/**/*.ts'",
    "build": "rm -rf ./build && npm run build:js",
    "build:js": "babel src --out-dir build --extensions \".ts,.js\" --source-maps inline",
    "lint": "tslint --fix ./"
  },
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "@sendgrid/mail": "^7.6.2",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.2",
    "cookie-parser": "^1.4.6",
    "core-js": "^3.21.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "passport": "^0.5.2",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.7.3",
    "randomstring": "^1.2.2",
    "reflect-metadata": "^0.1.13",
    "regenerator-runtime": "^0.13.9",
    "typeorm": "^0.3.0",
    "typescript": "^4.6.2",
    "uuid": "^8.3.2",
    "winston-env-logger": "^1.0.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.8",
    "@babel/node": "^7.16.8",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-decorators": "^7.17.8",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@babel/register": "^7.17.7",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "@types/passport": "^1.0.7",
    "@types/passport-facebook": "^2.1.11",
    "@types/passport-google-oauth20": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "coveralls": "^3.1.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "ts-node": "^10.7.0",
    "tslint": "^6.1.3"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run lint",
      "git add"
    ]
  }
}
